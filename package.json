{
  "name": "pgats-api-trabalho-final",
  "version": "1.0.0",
  "description": "## Descrição API para vendas de livros e cursos, com autenticação JWT, regras de negócio, documentação Swagger e interface GraphQL via Apollo Server.",
  "main": "app.js",
  "scripts": {
    "test": "mocha 'test/**/*.test.js' --timeout 10000 --reporter mochawesome",
    "test-external-rest": "mocha 'test/rest/external/**/*.test.js' --timeout 10000 --reporter mochawesome",
    "test-external-graphql": "mocha 'test/graphql/external/**/*.test.js' --timeout 10000 --reporter mochawesome",
    "test-controller-rest": "mocha 'test/rest/controller/**/*.test.js' --timeout 10000 --reporter mochawesome",
    "test-controller-graphql": "mocha 'test/graphql/controller/**/*.test.js' --timeout 10000 --reporter mochawesome",
    "start": "concurrently \"npm run start-rest\" \"npm run start-graphql\"",
    "start-graphql": "node graphql/server.js",
    "start-rest": "node server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^3.13.0",
    "express": "^4.21.2",
    "graphql": "^16.11.0",
    "jsonwebtoken": "^9.0.2",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "chai-exclude": "^2.1.1",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.2",
    "mocha": "^11.7.2",
    "mochawesome": "^7.1.4",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4"
  }
}
